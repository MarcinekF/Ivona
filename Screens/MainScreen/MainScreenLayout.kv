#: import t Localization.localization.t
<MainScreen>:
	GridLayout:
		cols: 2

		# BoxLayout for Buttons - LEFT
		BoxLayout:
			orientation: 'vertical'
			spacing: 50
			padding: 20

			Label:
				text: 'Ivona'
				font_size: 35

			Button:
				text: t('new_profile')
				id: new_profile
				size_hint_y: None
				height: 50
				on_release:
				    app.root.current = '-new_profile_screen-'
				    root.throw_information()
					app.root.transition.direction = 'left'


			ProfilesDropDown:
				id: profiles_dropdown
				size_hint_y: None
				height: 50
				on_text:
					root.select_voice(self.text)

			# SPACER
			Label:
				text: ''

            Button:
                text: t('settings')
                id: settings
                size_hint_y: None
                height: 50
                on_release:
                    app.root.transition.direction = 'right'
                    app.root.current = '-settings_screen-'

#			Button:
#				text: 'Profile'
#				id: profile
#				size_hint_y: None
#				height: 50
#				on_release:
#					app.root.transition.direction = 'left'
#					app.root.current = '-profile_screen-'

			Button:
				text: t('exit')
				id: exit
				size_hint_y: None
				height: 50
				on_press: quit()


        #RIGHT SIDE
		GridLayout:
		    cols: 1

            BoxLayout:
                orientation: 'vertical'
                spacing: 15
                padding: 15

                TextInput:
                    id: text_input
                    multiline: True

            BoxLayout:

                cols: 4
                size_hint_y: None
                height: 60
                spacing: 15
                padding: 15

                Button:
                    text: t('generate')
                    id: generate_play
                    background_color: 1, 0.1, 0.1, 1
                    size_hint_y: None
                    height: 50

                    on_release:
						root.generate_play_button()

#                Button:
#                    text: t('play')
#                    id: play
#                    background_color: 0.5, 0.7, 1, 1
#                    size_hint_y: None
#                    height: 50
#                    on_release:
#						root.play_audio()

                Button:
                    text: t('stop')
                    id: stop
                    background_color: 0.5, 0.7, 1, 1
                    size_hint_y: None
                    disabled: True
                    height: 50
                    on_release:
						root.stop_audio()

                Button:
                    text: t('resume')
                    id: resume
                    background_color: 0.5, 0.7, 1, 1
                    size_hint_y: None
                    disabled: True
                    height: 50
                    on_release:
						root.resume_audio()

                Button:
                    id: save
                    size_hint_y: None
                    size_hint_x: None
                    background_normal: 'Assets/img/dwn_img.png'
                    background_down: 'Assets/img/dwn_img.png'
                    background_color: 0.5, 0.7, 1, 1
                    disabled: True
                    height: 50
                    width: 50
                    on_release:
                        root.save_file()

