<MainScreen>:
	GridLayout:
		cols: 2

		# BoxLayout for Buttons - LEFT
		BoxLayout:
			orientation: 'vertical'
			spacing: 90
			padding: 15

			Label:
				text: 'Ivona'
				font_size: 35

			Button:
				text: 'New Profile'
				id: new_profile
				size_hint_y: None
				height: 50
				on_release:
					app.root.transition.direction = 'left'
					app.root.current = '-new_profile_screen-'

			ProfilesDropDown:
				id: profiles_dropdown
				size_hint_y: None
				height: 50
				on_text:
					root.select_voice(self.text)

			# SPACER
			Label:
				text: ''

#			Button:
#				text: 'Profile'
#				id: profile
#				size_hint_y: None
#				height: 50
#				on_release:
#					app.root.transition.direction = 'left'
#					app.root.current = '-profile_screen-'

			Button:
				text: 'Exit'
				id: exit
				size_hint_y: None
				height: 50
				on_press: quit()


        #RIGHT SIDE
		GridLayout:
		    cols: 1

            BoxLayout:
                orientation: 'vertical'
                spacing: 15
                padding: 15

                TextInput:
                    id: text_input
                    multiline: True

            BoxLayout:

                cols: 4
                size_hint_y: None
                height: 60
                spacing: 15
                padding: 15

                Button:
                    text: 'Generate'
                    id: generate
                    background_color: 0.1, 0.9, 0.3, 1
                    size_hint_y: None
                    height: 50
                    on_release:
						root.generate_audio()

                Button:
                    text: 'Play'
                    id: play
                    background_color: 0.5, 0.7, 1, 1
                    size_hint_y: None
                    height: 50
                    on_release:
						root.play_audio()

                Button:
                    text: 'Stop'
                    id: stop
                    background_color: 0.5, 0.7, 1, 1
                    size_hint_y: None
                    height: 50

                Button:
                    text: 'Resume'
                    id: resume
                    background_color: 0.5, 0.7, 1, 1
                    size_hint_y: None
                    height: 50