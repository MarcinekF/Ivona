<MainScreen>:
	GridLayout:
		cols: 2

		# BoxLayout for Buttons - LEFT
		BoxLayout:
			orientation: 'vertical'
			spacing: 90
			padding: 15

			Label:
				text: 'Ivona'
				font_size: 35

			Button:
				text: 'New Profile'
				id: new_profile
				size_hint_y: None
				height: 50
				on_release:
					app.root.transition.direction = 'left'
					app.root.current = '-new_profile_screen-'


			Button:
				text: 'Profile'
				id: profile
				size_hint_y: None
				height: 50
				on_release:
					app.root.transition.direction = 'left'
					app.root.current = '-profile_screen-'

			Button:
				text: 'Exit'
				id: exit
				size_hint_y: None
				height: 50
				on_press: quit()


        #RIGHT SIDE
		GridLayout:
		    cols: 1

            BoxLayout:
                orientation: 'vertical'
                spacing: 15
                padding: 15

                TextInput:
                    id: text_input
                    multiline: True

            BoxLayout:

                cols: 3
                size_hint_y: None
                height: 60
                spacing: 15
                padding: 15

                Button:
                    text: 'Play'
                    id: play
                    size_hint_y: None
                    height: 50

                Button:
                    text: 'Stop'
                    id: stop
                    size_hint_y: None
                    height: 50

                Button:
                    text: 'Resume'
                    id: resume
                    size_hint_y: None
                    height: 50