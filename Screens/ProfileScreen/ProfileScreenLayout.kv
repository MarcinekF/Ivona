<ProfileGridLayout>:
    cols: 1

    BoxLayout:
        orientation: 'vertical'
        spacing: 50
        padding: 10

        Label:
            text: 'Profile'
            font_size: 35

        Button:
            id: save_button
            text: 'User1'
            size_hint_y: None
            height: 50
            on_press: print('User1')

        Button:
            id: cancel_button
            text: 'Cancel'
            size_hint_y: None
            height: 50
			on_release:
				app.root.transition.direction = 'right'
				app.root.current = '-main_screen-'