<NewProfileGridLayout>:
    cols: 1

    BoxLayout:
        orientation: 'vertical'
        spacing: 30
        padding: 5

        Label:
            text: 'New Profile'
            font_size: 35
            size_hint_y: .2
            pos_hint_y: {'center_y': .5}

        TextInput:
            id: new_profile_text_input
            font_size: 50
			multiline: False
			halign: 'center'
			valign: 'middle'
			multiline: False
            size_hint_y: .3
            multiline: False

		Label:
			id: status_label
			text: 'Drag a recording here'
        #ListBox:
        #	id: list_box #list_box.refresh(new_profile_text_input.text)

        Button:
            id: add_button
            text: 'Add'
            size_hint_y: None
            height: 50
            on_press: root.add_profile(new_profile_text_input.text) #root.pass_to_json(new_profile_text_input.text, 'path')
            on_release: app.root.get_screen('-main_screen-').ids.profiles_dropdown.refresh_list()
			on_release:
				app.root.transition.direction = 'right'
				app.root.current = '-main_screen-'
            on_release: new_profile_text_input.text=""

        Button:
            id: cancel_button
            text: 'Cancel'
            size_hint_y: None
            height: 50
			on_release:
				app.root.transition.direction = 'right'
				app.root.current = '-main_screen-'
			on_press: new_profile_text_input.text=""
