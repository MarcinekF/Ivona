<NewProfileGridLayout>:
    cols: 1

    BoxLayout:
        orientation: 'vertical'
        spacing: 50
        padding: 10

        Label:
            text: 'New Profile'
            font_size: 35

        TextInput:
            id: new_profile_text_input
            font_size: 50
            multiline: False
            halign: 'center'
            valign: 'middle'
            multiline: False

        TextInput:
            id: sound_drop
            font_size: 50
            multiline: False
            halign: 'center'
            valign: 'middle'
            multiline: False

        Button:
            id: add_button
            text: 'Add'
            size_hint_y: None
            height: 50
            on_press: new_profile_text_input.text=""
            on_press: sound_drop.text=""
            on_press: root.pass_to_json(new_profile_text_input.text, sound_drop.text)

        Button:
            id: cancel_button
            text: 'Cancel'
            size_hint_y: None
            height: 50
			on_release:
				app.root.transition.direction = 'right'
				app.root.current = '-main_screen-'
			on_press: new_profile_text_input.text=""
            on_press: sound_drop.text=""
